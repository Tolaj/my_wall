{
  "name": "my_wall",
  "version": "1.0.0",
  "description": "A desktop sticky notes widget application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "notes",
    "desktop",
    "widget"
  ],
  "author": "Swapnil Jadhav",
  "license": "MIT",
  "devDependencies": {
    "electron": "^19.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "auto-launch": "^5.0.6"
  },
  "build": {
    "appId": "mywall.swapniljadhav.com",
    "productName": "My Wall",
    "win": {
      "target": "nsis",
      "icon": "src/renderer/assets/images/logo.ico"
    },
    "mac": {
      "target": null
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "installerIcon": "src/renderer/assets/images/logo.ico",
      "uninstallerIcon": "src/renderer/assets/images/logo.ico",
      "installerHeaderIcon": "src/renderer/assets/images/logo.ico"
    },
    "publish": null
  }
}